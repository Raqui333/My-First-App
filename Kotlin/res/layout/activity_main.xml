<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationY="0px"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible"
    android:id="@+id/mainAct">

    <TextView
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/generic_text"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/life_text"
        app:layout_constraintStart_toEndOf="@+id/life_text" />

    <TextView
        android:id="@+id/life_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/life_text"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wheel"
        android:layout_width="309dp"
        android:layout_height="302dp"
        android:contentDescription="@string/generic_description"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425"
        app:srcCompat="@drawable/box"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/score"
        android:layout_width="249dp"
        android:layout_height="86dp"
        android:gravity="center"
        android:text="@string/generic_text"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="@+id/wheel"
        app:layout_constraintEnd_toEndOf="@+id/wheel"
        app:layout_constraintStart_toStartOf="@+id/wheel"
        app:layout_constraintTop_toTopOf="@+id/wheel" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/scoreboard_text"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/wheel"
        app:layout_constraintStart_toStartOf="@+id/wheel"
        app:layout_constraintTop_toTopOf="@+id/wheel" />

    <ImageView
        android:id="@+id/gun"
        android:layout_width="79dp"
        android:layout_height="84dp"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/generic_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score"
        app:srcCompat="@drawable/arrow_up" />

</androidx.constraintlayout.widget.ConstraintLayout>